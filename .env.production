# Production Environment Configuration - DRMS
# IMPORTANT: Replace placeholder values with actual production values before deployment

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_NAME="Disaster Response Management System (DRMS)"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NODE_ENV=production

# ===========================================
# PWA SETTINGS
# ===========================================
NEXT_PUBLIC_PWA_ENABLED=true

# ===========================================
# DATABASE CONFIGURATION - REPLACE WITH ACTUAL VALUES
# ===========================================
DATABASE_URL="postgresql://drms_user:CHANGE_ME_PASSWORD@localhost:5432/drms_prod?schema=public&sslmode=require"

# ===========================================
# AUTHENTICATION & SECURITY - REPLACE WITH ACTUAL VALUES
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET="CHANGE_ME_JWT_SECRET_64_CHARS"
JWT_EXPIRES_IN="24h"

# Generate with: openssl rand -base64 32  
NEXTAUTH_SECRET="CHANGE_ME_NEXTAUTH_SECRET_32_CHARS"
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# API SETTINGS
# ===========================================
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# ===========================================
# SECURITY & PERFORMANCE
# ===========================================
ENABLE_SECURITY_HEADERS=true