# Production Environment Configuration Template
# Copy this file to .env.production and fill in actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_NAME="Disaster Response Management System (DRMS)"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NODE_ENV=production

# ===========================================
# PWA SETTINGS
# ===========================================
NEXT_PUBLIC_PWA_ENABLED=true

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Connection String for Production
DATABASE_URL="postgresql://username:password@production-db-host:5432/disaster_management_prod?schema=public&sslmode=require"

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate strong secrets for production:
# - JWT_SECRET: Use `openssl rand -base64 64`
# - NEXTAUTH_SECRET: Use `openssl rand -base64 32`

JWT_SECRET="REPLACE-WITH-STRONG-64-CHAR-SECRET"
JWT_EXPIRES_IN="24h"
NEXTAUTH_SECRET="REPLACE-WITH-STRONG-32-CHAR-SECRET"
NEXTAUTH_URL="https://your-production-domain.com"

# ===========================================
# API SETTINGS
# ===========================================
NEXT_PUBLIC_API_URL="https://your-production-domain.com/api"

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Add any external service configurations here
# EMAIL_PROVIDER_API_KEY=""
# SMS_PROVIDER_API_KEY=""
# STORAGE_SERVICE_KEY=""

# ===========================================
# MONITORING & LOGGING
# ===========================================
# SENTRY_DSN=""
# LOG_LEVEL="error"

# ===========================================
# PERFORMANCE & CACHING
# ===========================================
# Redis cache URL if using Redis for caching
# REDIS_URL="redis://redis-host:6379"

# ===========================================
# SECURITY HEADERS
# ===========================================
# Set to true to enable additional security headers
ENABLE_SECURITY_HEADERS=true

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
# Database backup configuration
# DB_BACKUP_ENABLED=true
# DB_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM