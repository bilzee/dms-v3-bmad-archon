# LAN Deployment Environment Configuration
# Copy this to .env.local for LAN deployments

# Next.js Environment Variables
NEXT_PUBLIC_APP_NAME="Disaster Response Management System (DRMS)"
NEXT_PUBLIC_APP_VERSION="0.1.0"

# PWA Settings
NEXT_PUBLIC_PWA_ENABLED=true

# Database (Local PostgreSQL)
DATABASE_URL="postgresql://drms_user:secure_password@localhost:5432/drms_local?schema=public"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-min-32-chars-for-lan"
JWT_EXPIRES_IN="24h"
NEXTAUTH_SECRET="your-nextauth-secret-for-lan"
NEXTAUTH_URL="http://192.168.1.100:3000"

# API Settings - Dual Network Support
NEXT_PUBLIC_API_URL="/api"                           # Default: relative URLs (works everywhere)
NEXT_PUBLIC_LAN_API_URL="http://192.168.1.100:3000/api"  # LAN-specific endpoint
NEXT_PUBLIC_WAN_API_URL="https://drms.yourdomain.com/api" # Internet fallback

# Network Configuration
NEXT_PUBLIC_LAN_ENABLED=true
NEXT_PUBLIC_AUTO_NETWORK_DETECTION=true

# LAN Server Settings
HOSTNAME="0.0.0.0"  # Accept connections from all network interfaces
PORT=3000

# Encryption (Generated automatically)
# ENCRYPTION_KEY will be generated by the app