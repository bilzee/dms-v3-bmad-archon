{
  "name": "disaster-management-pwa",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:pwa": "PWA_TESTING=true next dev",
    "build": "next build",
    "build:test": "NODE_ENV=test next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:pwa": "PWA_TESTING=true playwright test tests/integration/pwa.test.ts",
    "test:pwa-dev": "cross-env PWA_TESTING=true npm run dev & wait-on http://localhost:3000 && npm run test:pwa",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "^5.5.4",
    "next-pwa": "5.6.0",
    "dexie": "4.0.8",
    "zustand": "4.5.5",
    "zod": "3.23.8",
    "react-hook-form": "7.51.5",
    "tailwindcss": "3.4.6",
    "postcss": "8.4.39",
    "autoprefixer": "10.4.19"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/jest": "^29.5.12",
    "@playwright/test": "^1.55.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "wait-on": "^8.0.1",
    "cross-env": "^7.0.3"
  }
}